<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.38"/>

        <ImageView
            android:id="@+id/logobola1"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ball"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Court Tennis"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/logobola2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="75dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ball"/>

        <TextView
            android:id="@+id/round"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Round: "
            android:textSize="20dp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/textView"/>

        <EditText
            android:id="@+id/roundhit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:inputType="number"
            android:text=" "
            android:textSize="20dp"
            android:textColor="@color/yellow"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toEndOf="@id/round"/>

        <ImageView
            android:id="@+id/team1_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/round"
            app:srcCompat="@drawable/pic"/>

        <ImageView
            android:id="@+id/edit1logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="1dp"
            app:layout_constraintEnd_toEndOf="@id/team1_logo"
            app:layout_constraintBottom_toBottomOf="@id/team1_logo"
            app:srcCompat="@drawable/edit"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team 1"
            android:textSize="10pt"
            android:textColor="@color/yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/team1_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>

        <EditText
            android:id="@+id/team1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:inputType="textPersonName"
            android:hint="Name of Team 1 "
            android:textColorHint="@color/semiYellow"
            android:textColor="@color/semiYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/team1_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>

        <TextView
            android:id="@+id/vs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:layout_margin="20dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/team1_logo"/>

        <ImageView
            android:id="@+id/team2_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vs"
            android:outlineSpotShadowColor="@color/yellow"
            app:srcCompat="@drawable/pic"/>

        <ImageView
            android:id="@+id/edit2logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="1dp"
            app:layout_constraintEnd_toEndOf="@id/team2_logo"
            app:layout_constraintBottom_toBottomOf="@id/team2_logo"
            app:srcCompat="@drawable/edit"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team 2"
            android:textSize="10pt"
            android:textColor="@color/yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/team2_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>

        <EditText
            android:id="@+id/team2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:inputType="textPersonName"
            android:hint="Name of Team 2"
            android:textColorHint="@color/semiYellow"
            android:textColor="@color/semiYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/team2_logo"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>

        <Button
            android:id="@+id/btn_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="124dp"
            android:layout_marginRight="20dp"
            android:background="@color/yellow"
            android:text="Next"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/team2_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>